<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".controller.BudgetFragment">

  <TextView
    android:id="@+id/personal_allowance_percent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Personal Allowance 50% of total"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="long_term_goal"
    app:layout_constraintBottom_toTopOf="monthly_budget"
    />

  <TextView
    android:id="@+id/long_term_goal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Savings 35% of Goal"
    app:layout_constraintStart_toEndOf="@id/personal_allowance_percent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="monthly_budget"
    />

  <TextView
    android:id="@+id/monthly_budget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/personal_allowance_percent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="budget_list"
    />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/budget_list"
    android:layout_width="@dimen/fill_space"
    android:layout_height="@dimen/fill_space"
    android:layout_margin="@dimen/half_margin"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/monthly_budget"
    app:layout_constraintEnd_toEndOf="parent"
    />



</androidx.constraintlayout.widget.ConstraintLayout>