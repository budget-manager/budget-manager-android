<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="@dimen/full_margin"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".controller.TransactionFragment">

  <TextView
    android:id="@+id/goal_threshold_percent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="35% of Goal"
    android:textSize="25sp"
    android:gravity="center"
    android:paddingVertical="@dimen/full_margin"
    android:layout_marginTop="@dimen/full_margin"
    app:layout_constraintBottom_toTopOf="@id/progress_circular"
    />

  <ProgressBar
    android:id="@+id/progress_circular"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:layout_constraintTop_toBottomOf="@id/goal_threshold_percent"
    app:layout_constraintBottom_toTopOf="budget_list"
    android:layout_marginVertical="@dimen/full_margin">
  </ProgressBar>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/budget_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/progress_circular"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    android:orientation="vertical"
    android:background="#FFE0E0E0"
    android:padding="@dimen/half_margin"/>



</androidx.constraintlayout.widget.ConstraintLayout>