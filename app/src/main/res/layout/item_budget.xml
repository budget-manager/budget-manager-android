<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/full_margin"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/full_margin"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    />

  <TextView
    android:id="@+id/budgeted_amount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/full_margin"
    app:layout_constraintBaseline_toBaselineOf="@id/name"
    app:layout_constraintEnd_toEndOf="parent"
    />


  <TextView
    android:id="@+id/start_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/full_margin"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/name"
    />

  <TextView
    android:id="@+id/date_range_separator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="&#x2013;"
    android:layout_margin="@dimen/full_margin"
    app:layout_constraintStart_toEndOf="@id/start_date"
    app:layout_constraintBaseline_toBaselineOf="@id/start_date"
    />

  <TextView
    android:id="@+id/end_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/full_margin"
    app:layout_constraintStart_toEndOf="@id/date_range_separator"
    app:layout_constraintBaseline_toBaselineOf="@id/start_date"
    />

</androidx.constraintlayout.widget.ConstraintLayout>

