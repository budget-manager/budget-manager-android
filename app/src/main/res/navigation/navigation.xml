<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  app:startDestination="@id/login_fragment">

  <fragment
    android:id="@+id/login_fragment"
    android:name="edu.cnm.deepdive.budgetmanager.LoginFragment"
    android:label="fragment_home"
    tools:layout="@layout/fragment_login">

    <action
      android:id="@+id/login_to_home"
      app:destination="@id/home_fragment"/>
  </fragment>

  <fragment
    android:id="@+id/home_fragment"
    android:name="edu.cnm.deepdive.budgetmanager.HomeFragment"
    android:label="fragment_home"
    tools:layout="@layout/fragment_home">

    <action
      android:id="@+id/home_to_budgets"
      app:destination="@id/budget_fragment"/>

    <action
      android:id="@+id/home_to_transaction"
      app:destination="@id/transaction_fragment"/>
  </fragment>

  <fragment
    android:id="@+id/budget_fragment"
    android:name="edu.cnm.deepdive.budgetmanager.BudgetFragment"
    android:label="fragment_budget"
    tools:layout="@layout/fragment_budget">

    <action
      android:id="@+id/budget_to_category_detail"
      app:destination="@id/category_detail_fragment"/>
  </fragment>

  <fragment
    android:id="@+id/transaction_fragment"
    android:name="edu.cnm.deepdive.budgetmanager.TransactionFragment"
    android:label="fragment_transaction"
    tools:layout="@layout/fragment_transaction">

    <action
      android:id="@+id/transaction_to_category_detail"
      app:destination="@id/category_detail_fragment"/>

  <action
    android:id="@+id/transaction_to_budget"
    app:destination="@id/budget_fragment"/>

  </fragment>

      <fragment
        android:id="@+id/category_detail_fragment"
        android:name="edu.cnm.deepdive.budgetmanager.CategoryDetailFragment"
        android:label="fragment_category_detail"
        tools:layout="@layout/fragment_category_detail">

  <action
    android:id="@+id/category_detail_to_budget"
    app:destination="@id/budget_fragment"/>

  <action
    android:id="@+id/category_detail_to_transaction"
    app:destination="@id/transaction_fragment"/>
      </fragment>

</navigation>